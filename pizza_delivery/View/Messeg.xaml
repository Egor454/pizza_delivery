<Window x:Class="pizza_delivery.View.Messeg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pizza_delivery.View"
        mc:Ignorable="d"
        Title="Messeg" Height="130" Width="300" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" WindowStartupLocation="CenterOwner">
    <Border Grid.Row="1" CornerRadius="50" Margin="10" Grid.Column="2" BorderBrush="Red" BorderThickness="2">
        <StackPanel Margin="20">
            <Separator Margin="0,10,0,0"/>
            <TextBlock Margin="0,10,0,10" Text="{Binding Path=DisplayName}" Foreground="Red" FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Separator Margin="0,0,0,10"/>
        </StackPanel>
        
    </Border>
</Window>
