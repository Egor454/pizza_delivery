<Page x:Class="pizza_delivery.View.Product"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pizza_delivery.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Product">

    <Grid Background="White">

        <ListBox ItemsSource="{Binding Path=AllPizza}" SelectedItem="{Binding Path=SelectProduct}"  Background="{x:Null}"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
  
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" CornerRadius="5,0,5,0" BorderBrush="#FF27B920" Background="White">
                        <StackPanel Margin="3">
                            <StackPanel.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Path=Sostav}" FontSize="14"/>
                                    </StackPanel>
                                </ToolTip>
                            </StackPanel.ToolTip>
                            <Image Width="150" Height="150" Source="{Binding Path=Image}"/>
                            <TextBlock Text="{Binding Path=Name}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                <TextBlock Text="Цена: "/>
                                <TextBlock Text="{Binding Path=Price}"/>
                                <TextBlock Text=" ₽"/>
                            </StackPanel>
                            <Button Command="{Binding Path=AddPizza}" CommandParameter="{Binding}"  Style="{StaticResource BaseButton}" Content="Купить"   
                            />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</Page>
